<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thank_you_actvity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/thank_you_bg"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Your order\n has\n been placed\nsucessfully"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:gravity="center"
            android:fontFamily="@font/creepster"
            android:textColor="#C51162"
            android:textSize="40sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            tools:ignore="TextViewEdits" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Kindly wait for the expected arrival"
            android:textSize="24sp"
            android:textColor="#FA509C"
            android:fontFamily="@font/creepster"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="20dp"
            android:text="Rate us"
            android:textSize="24sp"
            android:gravity="left"
            android:paddingTop="6dp"
            android:textColor="#FA509C"
            android:fontFamily="@font/creepster"
            />



        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:numStars="5"
            android:layout_gravity="center"
            android:progressTint="#D5327B"
            />


        <TextView
            android:id="@+id/thank_you"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_margin="20dp"
            android:text="Thank you for \nvisiting Foodies5"
            android:gravity="center"
            android:visibility="invisible"
            android:fontFamily="@font/atomic_age"
            android:textStyle="bold"
            android:textColor="#FD0374"
            android:textSize="30sp"
            />





    </LinearLayout>
</androidx.cardview.widget.CardView>