<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    app:cardCornerRadius="10dp"
    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="168dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B489EF"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:paddingTop="30dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="59dp"
                    android:text="@string/sharma_bhel_puri"
                    android:textAllCaps="true"
                    android:fontFamily="@font/atomic_age"
                    android:textColor="#570381"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:drawableRightCompat="@drawable/ic_baseline_shopping_cart_24"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel_sharma_bhel_puri"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="-2dp"
            app:animateOnBoundary="true"
            android:layout_margin="10dp"
            app:autoPlay="true"
            app:pageColor="#8E2CBF"
            app:radius="6dp"
            app:slideInterval="3000"
            app:snap="true"
            app:strokeColor="#53DAEF"
            app:strokeWidth="10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/sharma_recview"
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="250dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
          />

    </LinearLayout>
</ScrollView>
</androidx.cardview.widget.CardView>