<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="#FDF6F6"
    app:cardCornerRadius="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:elevation="5dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/menu"
            android:textAllCaps="true"
            android:padding="30dp"
            android:gravity="left"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#091D8F"
            android:fontFamily="@font/audiowide"
            tools:ignore="RtlHardcoded"
            android:layout_marginBottom="15dp"
            android:drawableRight="@drawable/ic_baseline_shopping_cart_24"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="-14dp"
                android:layout_marginBottom="18dp"
                android:text="More Information:  www.shivsagarrestaurant.com"
                android:textStyle="bold"
                android:textColor="#5B73F8"
                android:paddingStart="25dp"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="205dp"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#C8ABEF"
                >
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="false"
                    android:clipToPadding="true"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/breakfast"
                                android:layout_width="90dp"
                                android:layout_height="85dp"

                                android:layout_above="@+id/textView2"


                                android:layout_alignParentTop="true"

                                app:cardBackgroundColor="#F6EDBD"
                                app:cardCornerRadius="18dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/breakfast" />
                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="16dp"
                                android:gravity="center"
                                android:text="BREAKFAST"
                                android:textColor="#C51162"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/breakfast"
                                app:layout_constraintVertical_bias="0.0"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/lunch"
                                android:layout_width="90dp"
                                android:layout_height="85dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                app:cardBackgroundColor="#F6EDBD"
                                app:cardCornerRadius="18dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="MissingConstraints">

                                <ImageView
                                    android:layout_width="84dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/lunch" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="79dp"
                                android:layout_height="29dp"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="38dp"
                                android:gravity="center"
                                android:text="lunch"
                                android:textAllCaps="true"

                                android:textColor="#C51162"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.545"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0"
                                tools:ignore="MissingConstraints" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/snacks"
                                android:layout_width="90dp"
                                android:layout_height="85dp"
                                app:cardBackgroundColor="#F6EDBD"
                                app:cardCornerRadius="18dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/snacks" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="84dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="44dp"
                                android:gravity="center"
                                android:text="snacks"
                                android:textAllCaps="true"
                                android:textColor="#C51162"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/snacks"
                                app:layout_constraintVertical_bias="0.571" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="40dp"
                            >

                            <androidx.cardview.widget.CardView
                                android:id="@+id/dinner"
                                android:layout_width="90dp"
                                android:layout_height="85dp"
                                app:cardBackgroundColor="#F6EDBD"
                                app:cardCornerRadius="18dp"
                                android:layout_marginTop="63dp"
                                app:layout_constraintBottom_toTopOf="@+id/textView8"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                >

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/dinner" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="91dp"
                                android:layout_height="22dp"
                                android:gravity="center"
                                android:text="dinner"
                                android:textAllCaps="true"
                                android:textColor="#C51162"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.77" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

                </HorizontalScrollView>
            </androidx.cardview.widget.CardView>




            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:id="@+id/hotel_recview"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />


        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>